---
export interface Props {
  title: string;
  industries: {
    name: string;
    description: string;
    keywords: string[];
    icon: string;
  }[];
}

const { title, industries } = Astro.props;
---

<section class="industry-section">
  <div class="container">
    <h2 class="section-title">{title}</h2>
    <p class="section-subtitle">
      We understand the unique challenges and opportunities in your industry. 
      Our Houston-focused digital marketing strategies are tailored to help your business thrive locally.
    </p>
    
    <div class="industry-grid">
      {industries.map(industry => (
        <div class="industry-card">
          <div class="industry-icon" set:html={industry.icon}>
          </div>
          <h3 class="industry-name">{industry.name}</h3>
          <p class="industry-description" set:html={industry.description}></p>
          <div class="industry-keywords">
            {industry.keywords.map(keyword => (
              <span class="keyword-tag">{keyword}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .industry-section {
    padding: 4rem 0;
    background: #FAFAFA;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .section-title {
    font-size: 3rem;
    font-weight: 700;
    color: #1f2937;
    text-align: center;
    margin-bottom: 1rem;
  }
  
  .section-subtitle {
    font-size: 1.125rem;
    color: #6b7280;
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
  }
  
  .industry-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Center the 5th item (odd item) when there are 5 total */
  .industry-grid .industry-card:nth-child(5) {
    grid-column: 1 / -1;
    max-width: 50%;
    margin: 0 auto;
  }
  
  .industry-card {
    background: transparent;
    border-radius: 0.5rem;
    padding: 2rem;
    border: 1px solid transparent;
    transition: all 0.4s ease;
    text-align: center;
  }
  
  .industry-card:hover {
    background: linear-gradient(135deg, rgba(249, 87, 56, 0.08), rgba(255, 255, 255, 0.95));
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(249, 87, 56, 0.15);
    border: 1px solid rgba(249, 87, 56, 0.2);
  }
  
  .industry-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .industry-icon svg {
    width: 64px;
    height: 64px;
    display: block;
  }
  
  .industry-name {
    color: #1f2937;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .industry-description {
    color: #6b7280;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  
  .industry-keywords {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
  }
  
  .keyword-tag {
    background: transparent;
    color: #F95738;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
  }
  
  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }
    
    .industry-grid {
      grid-template-columns: 1fr;
    }
    
    /* Reset 5th card styling on mobile */
    .industry-grid .industry-card:nth-child(5) {
      grid-column: auto;
      max-width: 100%;
    }
  }
</style>