---
export interface Props {
  title: string;
  description: string;
  features: string[];
  targetKeywords?: string;
}

const { title, description, features, targetKeywords } = Astro.props;
---

<div class="service-card">
  <h3 class="service-title">{title}</h3>
  <p class="service-description" set:html={description}></p>
  <ul class="service-features">
    {features.map(feature => (
      <li>{feature}</li>
    ))}
  </ul>
</div>

<style>
  .service-card {
    background: transparent;
    padding: 2.5rem 2rem;
    transition: all 0.4s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    text-align: left;
    border-radius: 12px;
    border: 1px solid transparent;
  }
  
  .service-card:hover {
    background: linear-gradient(135deg, rgba(249, 87, 56, 0.08), rgba(255, 255, 255, 0.95));
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(249, 87, 56, 0.15);
    border: 1px solid rgba(249, 87, 56, 0.2);
  }
  
  .service-title {
    color: var(--text-primary);
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 1.25rem 0;
    line-height: 1.3;
    display: block;
  }
  
  .service-description {
    color: var(--text-secondary);
    margin: 0 0 1.5rem 0;
    font-size: 1.125rem;
    line-height: 1.6;
  }
  
  .service-features {
    list-style: none;
    margin: 0;
    text-align: left;
    padding-left: 0;
  }
  
  .service-features li {
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
    padding-left: 1.2rem;
    position: relative;
    font-size: 1rem;
    line-height: 1.6;
  }
  
  .service-features li::before {
    content: "âœ“";
    color: var(--primary-orange);
    font-weight: bold;
    position: absolute;
    left: 0;
    top: 0;
  }
  
</style>