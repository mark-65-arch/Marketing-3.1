---
export interface Props {
  title: string;
  description: string;
  features: string[];
  targetKeywords?: string;
}

const { title, description, features, targetKeywords } = Astro.props;
---

<div class="service-card">
  <h3 class="service-title">{title}</h3>
  <p class="service-description" set:html={description}></p>
  <ul class="service-features">
    {features.map(feature => (
      <li>{feature}</li>
    ))}
  </ul>
</div>

<style>
  .service-card {
    background: transparent;
    padding: 1.5rem 1.5rem;
    transition: transform 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    text-align: left;
    border-radius: 12px;
  }
  
  .service-card:hover {
    transform: translateY(-5px);
  }
  
  .service-title {
    color: var(--text-primary);
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
    display: block;
  }
  
  .service-description {
    color: var(--text-secondary);
    margin: 0 0 0.75rem 0;
    font-size: 1.1rem;
    line-height: 1.5;
  }
  
  .service-features {
    list-style: none;
    margin: 0;
    text-align: left;
    padding-left: 0;
  }
  
  .service-features li {
    color: var(--text-secondary);
    margin-bottom: 0.3rem;
    padding-left: 1.2rem;
    position: relative;
    font-size: 0.95rem;
    line-height: 1.3;
  }
  
  .service-features li::before {
    content: "âœ“";
    color: var(--primary-orange);
    font-weight: bold;
    position: absolute;
    left: 0;
    top: 0;
  }
  
</style>