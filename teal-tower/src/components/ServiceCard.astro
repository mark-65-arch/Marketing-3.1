---
export interface Props {
  title: string;
  description: string;
  features: string[];
  targetKeywords?: string;
}

const { title, description, features, targetKeywords } = Astro.props;
---

<div class="service-card">
  <h3 class="service-title">{title}</h3>
  <p class="service-description">{description}</p>
  <ul class="service-features">
    {features.map(feature => (
      <li>{feature}</li>
    ))}
  </ul>
  <a href="/contact" class="service-cta">Get Started</a>
</div>

<style>
  .service-card {
    background: transparent;
    padding: 3rem 2rem;
    transition: transform 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    text-align: left;
    border-radius: 12px;
  }
  
  .service-card:hover {
    transform: translateY(-5px);
  }
  
  .service-title {
    color: var(--text-primary);
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }
  
  .service-description {
    color: var(--text-secondary);
    margin-bottom: 2rem;
    font-size: 1.1rem;
    line-height: 1.6;
  }
  
  .service-features {
    list-style: none;
    margin-bottom: 2.5rem;
    text-align: left;
  }
  
  .service-features li {
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
    position: relative;
    font-size: 0.95rem;
    line-height: 1.5;
  }
  
  .service-features li::before {
    content: "âœ“";
    color: var(--primary-orange);
    font-weight: bold;
    position: absolute;
    left: 0;
  }
  
  .service-cta {
    background: linear-gradient(135deg, var(--button-orange), var(--accent-terracotta));
    color: white;
    padding: 1rem 2rem;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 600;
    text-align: center;
    transition: var(--transition);
    margin-top: auto;
    box-shadow: var(--shadow-button);
    display: inline-block;
    align-self: flex-start;
  }
  
  .service-cta:hover {
    background: linear-gradient(135deg, var(--accent-coral), var(--button-orange));
    transform: translateY(-2px);
    box-shadow: var(--shadow-button-hover);
  }
</style>