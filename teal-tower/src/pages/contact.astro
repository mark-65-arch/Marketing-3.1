---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact Marketing AI Houston | Free SEO Audit & Consultation | Houston Digital Marketing"
  description="Contact Marketing AI Houston for a free SEO audit and consultation. Call (713) 555-0123 or fill out our form to discuss your digital marketing needs."
  keywords="contact Houston SEO company, free SEO audit Houston, digital marketing consultation Houston, Marketing AI Houston contact"
>
  <!-- Hero Section -->
  <section class="contact-hero">
    <div class="container">
      <h1 class="hero-title">Contact Marketing AI Houston</h1>
      <p class="hero-subtitle">
        Ready to grow your Houston business? Get a free SEO audit and consultation 
        to discover how we can help you attract more customers and increase revenue.
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="contact-content">
    <div class="container">
      <div class="contact-grid">
        
        <!-- Contact Form -->
        <div class="contact-form-section">
          <h2 class="form-title">Get Your Free SEO Audit & Consultation</h2>
          <p class="form-subtitle">
            Tell us about your business and goals. We'll provide a detailed analysis 
            and recommendations to help your Houston business succeed online.
          </p>
          
          <form class="contact-form" action="#" method="POST">
            <div class="form-row">
              <div class="form-group">
                <label for="firstName">First Name *</label>
                <input type="text" id="firstName" name="firstName" required>
              </div>
              <div class="form-group">
                <label for="lastName">Last Name *</label>
                <input type="text" id="lastName" name="lastName" required>
              </div>
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" required>
              </div>
              <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone">
              </div>
            </div>
            
            <div class="form-group">
              <label for="businessName">Business Name *</label>
              <input type="text" id="businessName" name="businessName" required>
            </div>
            
            <div class="form-group">
              <label for="website">Current Website URL</label>
              <input type="url" id="website" name="website" placeholder="https://yourwebsite.com">
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="industry">Industry</label>
                <select id="industry" name="industry">
                  <option value="">Select Your Industry</option>
                  <option value="contractor">Contractor/Home Services</option>
                  <option value="medical">Medical/Healthcare</option>
                  <option value="real-estate">Real Estate</option>
                  <option value="legal">Legal Services</option>
                  <option value="restaurant">Restaurant/Food Service</option>
                  <option value="retail">Retail</option>
                  <option value="professional">Professional Services</option>
                  <option value="other">Other</option>
                </select>
              </div>
              <div class="form-group">
                <label for="location">Houston Area</label>
                <select id="location" name="location">
                  <option value="">Select Your Area</option>
                  <option value="downtown">Downtown Houston</option>
                  <option value="heights">The Heights</option>
                  <option value="montrose">Montrose</option>
                  <option value="sugar-land">Sugar Land</option>
                  <option value="katy">Katy</option>
                  <option value="cypress">Cypress</option>
                  <option value="bellaire">Bellaire</option>
                  <option value="memorial">Memorial</option>
                  <option value="galleria">Galleria</option>
                  <option value="other">Other Houston Area</option>
                </select>
              </div>
            </div>
            
            <div class="form-group">
              <label for="services">Services Interested In</label>
              <div class="checkbox-group">
                <label class="checkbox-label">
                  <input type="checkbox" name="services" value="website-design">
                  <span class="checkmark"></span>
                  Website Design/Redesign
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" name="services" value="seo">
                  <span class="checkmark"></span>
                  SEO Optimization
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" name="services" value="business-profile">
                  <span class="checkmark"></span>
                  Business Profile Optimization
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" name="services" value="ai-search">
                  <span class="checkmark"></span>
                  AI Search Optimization
                </label>
              </div>
            </div>
            
            <div class="form-group">
              <label for="goals">Business Goals & Challenges</label>
              <textarea id="goals" name="goals" rows="4" placeholder="Tell us about your current marketing challenges and what you'd like to achieve..."></textarea>
            </div>
            
            <div class="form-group">
              <label for="budget">Monthly Marketing Budget</label>
              <select id="budget" name="budget">
                <option value="">Select Budget Range</option>
                <option value="under-1000">Under $1,000</option>
                <option value="1000-2500">$1,000 - $2,500</option>
                <option value="2500-5000">$2,500 - $5,000</option>
                <option value="5000-10000">$5,000 - $10,000</option>
                <option value="over-10000">Over $10,000</option>
              </select>
            </div>
            
            <button type="submit" class="btn-primary-hero large">Get My Free SEO Audit</button>
            
            <p class="form-disclaimer">
              By submitting this form, you agree to receive marketing communications from Marketing AI Houston. 
              We respect your privacy and will never share your information.
            </p>
          </form>
        </div>
        
        <!-- Contact Information -->
        <div class="contact-info">
          <div class="info-card">
            <h3>Get In Touch</h3>
            <div class="contact-item">
              <div class="contact-icon">üìû</div>
              <div class="contact-details">
                <h4>Phone</h4>
                <span class="contact-link">Contact us for consultation</span>
                <p>Call for immediate assistance</p>
              </div>
            </div>
            
            <div class="contact-item">
              <div class="contact-icon">‚úâÔ∏è</div>
              <div class="contact-details">
                <h4>Email</h4>
                <a href="mailto:info@marketingaihouston.com" class="contact-link">info@marketingaihouston.com</a>
                <p>We respond within 24 hours</p>
              </div>
            </div>
            
            <div class="contact-item">
              <div class="contact-icon">üìç</div>
              <div class="contact-details">
                <h4>Location</h4>
                <p>Serving Greater Houston Area</p>
                <p>All of Greater Houston and surrounding communities</p>
              </div>
            </div>
          </div>
          
          <div class="hours-card">
            <h3>Business Hours</h3>
            <div class="hours-list">
              <div class="hours-item">
                <span class="day">Monday - Friday</span>
                <span class="time">9:00 AM - 6:00 PM</span>
              </div>
              <div class="hours-item">
                <span class="day">Saturday</span>
                <span class="time">10:00 AM - 4:00 PM</span>
              </div>
              <div class="hours-item">
                <span class="day">Sunday</span>
                <span class="time">Closed</span>
              </div>
            </div>
            <p class="hours-note">
              Emergency consultations available by appointment. 
              Call us for urgent digital marketing needs.
            </p>
          </div>
          
          <div class="map-placeholder">
            <h3>Serving Greater Houston</h3>
            <div class="map-container">
              <div class="map-content">
                <p>üìç Greater Houston Area</p>
                <p>We proudly serve all Houston areas including The Heights, Montrose, Sugar Land, Katy, Cypress, and surrounding communities.</p>
                <a href="/contact" class="map-link">
                  Contact us for consultation
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="service-areas">
    <div class="container">
      <h2 class="section-title">Proudly Serving Houston and Surrounding Areas</h2>
      <div class="areas-grid">
        <div class="area-item">Downtown Houston</div>
        <div class="area-item">The Heights</div>
        <div class="area-item">Montrose</div>
        <div class="area-item">Sugar Land</div>
        <div class="area-item">Katy</div>
        <div class="area-item">Cypress</div>
        <div class="area-item">Bellaire</div>
        <div class="area-item">Memorial</div>
        <div class="area-item">Galleria</div>
        <div class="area-item">River Oaks</div>
        <div class="area-item">Pearland</div>
        <div class="area-item">Humble</div>
      </div>
      <p class="areas-note">
        Don't see your area listed? We serve all of Greater Houston and surrounding communities. 
        Contact us to discuss how we can help your business succeed.
      </p>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <h2 class="section-title">Frequently Asked Questions</h2>
      <div class="faq-grid">
        <div class="faq-item">
          <h3>How long does it take to see SEO results?</h3>
          <p>Most Houston businesses start seeing improvements in 3-6 months, with significant results within 6-12 months. We provide monthly reports to track progress.</p>
        </div>
        <div class="faq-item">
          <h3>Do you work with small businesses?</h3>
          <p>Yes! We specialize in helping Houston small businesses compete with larger companies through strategic digital marketing and local SEO.</p>
        </div>
        <div class="faq-item">
          <h3>What's included in the free SEO audit?</h3>
          <p>Our comprehensive audit includes website analysis, competitor research, keyword opportunities, and actionable recommendations specific to your Houston market.</p>
        </div>
        <div class="faq-item">
          <h3>Do you offer monthly contracts?</h3>
          <p>Yes, we offer flexible month-to-month contracts. We believe in earning your business every month through results, not long-term commitments.</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Contact Hero */
  .contact-hero {
    background: linear-gradient(135deg, #1e3a8a 0%, #2563eb 100%);
    color: white;
    padding: 8rem 0 4rem;
    text-align: center;
  }
  
  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.9;
  }
  
  /* Contact Content */
  .contact-content {
    padding: 4rem 0;
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: start;
  }
  
  /* Contact Form */
  .form-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 1rem;
  }
  
  .form-subtitle {
    color: #6b7280;
    margin-bottom: 2rem;
    line-height: 1.6;
  }
  
  .contact-form {
    background: white;
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-group label {
    display: block;
    color: #374151;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }
  
  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    font-size: 1rem;
    transition: border-color 0.2s ease;
  }
  
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }
  
  .checkbox-group {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
  }
  
  .checkbox-label {
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 0.25rem;
    transition: background-color 0.2s ease;
  }
  
  .checkbox-label:hover {
    background: #f9fafb;
  }
  
  .checkbox-label input[type="checkbox"] {
    width: auto;
    margin-right: 0.5rem;
  }
  
  .btn-primary.large {
    width: 100%;
    font-size: 1.125rem;
    padding: 1rem 2rem;
    margin-top: 1rem;
  }
  
  .form-disclaimer {
    font-size: 0.875rem;
    color: #6b7280;
    text-align: center;
    margin-top: 1rem;
    line-height: 1.5;
  }
  
  /* Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .info-card,
  .hours-card {
    background: white;
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }
  
  .info-card h3,
  .hours-card h3 {
    color: #1f2937;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }
  
  .contact-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    align-items: start;
  }
  
  .contact-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }
  
  .contact-details h4 {
    color: #1f2937;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }
  
  .contact-link {
    color: #2563eb;
    text-decoration: none;
    font-weight: 500;
  }
  
  .contact-link:hover {
    text-decoration: underline;
  }
  
  .contact-details p {
    color: #6b7280;
    font-size: 0.875rem;
    margin: 0;
  }
  
  /* Hours */
  .hours-list {
    margin-bottom: 1rem;
  }
  
  .hours-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
    padding: 0.25rem 0;
  }
  
  .day {
    color: #1f2937;
    font-weight: 500;
  }
  
  .time {
    color: #6b7280;
  }
  
  .hours-note {
    color: #6b7280;
    font-size: 0.875rem;
    line-height: 1.5;
  }
  
  /* Map */
  .map-placeholder {
    background: white;
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }
  
  .map-placeholder h3 {
    color: #1f2937;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .map-container {
    background: #f3f4f6;
    border-radius: 0.375rem;
    padding: 2rem;
    text-align: center;
    border: 2px dashed #d1d5db;
  }
  
  .map-content p {
    color: #6b7280;
    margin-bottom: 1rem;
  }
  
  .map-link {
    color: #2563eb;
    text-decoration: none;
    font-weight: 500;
  }
  
  .map-link:hover {
    text-decoration: underline;
  }
  
  /* Service Areas */
  .service-areas {
    background: #f9fafb;
    padding: 3rem 0;
  }
  
  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1f2937;
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .areas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .area-item {
    background: white;
    padding: 1rem;
    text-align: center;
    border-radius: 0.375rem;
    font-weight: 500;
    color: #1f2937;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }
  
  .areas-note {
    text-align: center;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
  }
  
  /* FAQ Section */
  .faq-section {
    padding: 3rem 0;
  }
  
  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .faq-item {
    background: white;
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }
  
  .faq-item h3 {
    color: #1f2937;
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .faq-item p {
    color: #6b7280;
    line-height: 1.6;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
  
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }
    
    .form-title {
      font-size: 1.75rem;
    }
    
    .contact-form {
      padding: 1.5rem;
    }
    
    .form-row {
      grid-template-columns: 1fr;
    }
    
    .checkbox-group {
      grid-template-columns: 1fr;
    }
    
    .section-title {
      font-size: 1.75rem;
    }
    
    .areas-grid {
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    }
    
    .faq-grid {
      grid-template-columns: 1fr;
    }
  }
</style>