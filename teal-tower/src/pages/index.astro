];

const houstonAreas = {
  "Central Houston": ["Bellaire", "West University Place", "Southside Place", "Spring Branch", "Garden Oaks", "The Heights", "Memorial Villages"],
  "North Houston": ["The Woodlands", "Conroe", "Spring", "Tomball", "Cypress", "Kingwood"],
  "South Houston": ["Pearland", "Missouri City", "Friendswood", "League City", "Sugar Land", "Alvin", "Fresno"],
  "East Houston": ["Baytown", "Deer Park", "La Porte", "Channelview", "Pasadena", "Crosby"],
  "West Houston": ["Katy", "Richmond", "Fulshear", "Cinco Ranch", "Brookshire"]
};
---

<BaseLayout 
  title="Houston SEO Company | Digital Marketing for Small Business | Marketing AI Houston"
  description="Hire Houston SEO company for small business growth. Website design, business profile optimization, and AI SEO services for Houston businesses. Get more leads today!"
  keywords="hire Houston SEO company for small business, Houston business profile optimization service, AI SEO services for Houston businesses, Houston website redesign experts, get more leads website SEO Houston"
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content" style="position: relative; z-index: 2;">
        <h1 class="hero-title">
          Next-Generation Marketing <span style="color: #F95738;">Without the Hype</span>
        </h1>
        <p class="hero-subtitle">
          Modern AI-powered strategies without the agency bureaucracy, long contracts, or outdated tactics. Fresh perspective, personal attention.
        </p>
        <div class="hero-cta">
          <a href="/contact" class="btn-primary-hero">GET YOUR <span style="color: white; font-weight: 800;">FREE</span> SEO AUDIT</a>
        </div>
      </div>
      <div class="geometric-shapes">
        <div class="shape triangle triangle-1"></div>
        <div class="shape triangle triangle-2"></div>
        <div class="shape hexagon"></div>
        <div class="shape small-circle"></div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="services">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Houston Digital Marketing Services</h2>
        <p class="section-subtitle">
          Comprehensive digital marketing solutions designed specifically for Houston small businesses. 
          Each service is built to deliver measurable results and grow your Houston presence.
        </p>
      </div>
      
      <div class="services-grid">
        {services.map(service => (
          <ServiceCard {...service} />
        ))}
      </div>
      
      <div class="services-cta">
        <a href="/contact" class="btn-primary-hero">GET STARTED</a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Over Traditional Agencies -->
  <section class="competitive-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Why Smart Houston Businesses Are Choosing Us Over Traditional Agencies</h2>
      </div>
      
      <div class="competitive-grid">
        <div class="competitive-item">
          <h3><span style='color: #F95738;'>No Long-Term Contracts</span></h3>
          <p>Work with us month-to-month. We earn your business through results, not paperwork.</p>
        </div>
        <div class="competitive-item">
          <h3><span style='color: #F95738;'>Direct Access to Decision Makers</span></h3>
          <p>Skip the account manager runaround. You work directly with the people doing the work.</p>
        </div>
        <div class="competitive-item">
          <h3><span style='color: #F95738;'>AI-powered competitor analysis and keyword research tools</span></h3>
          <p>We use advanced AI technology for competitor analysis and keyword research that bigger agencies are still trying to figure out.</p>
        </div>
        <div class="competitive-item">
          <h3><span style='color: #F95738;'>Transparent pricing with no setup fees or hidden costs</span></h3>
          <p>New agency means lower overhead, transparent pricing, and better value for Houston businesses ready to grow.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Industry Focus -->
  <IndustrySection 
    title="Industries We Serve in Houston"
    industries={industries}
  />

  <!-- Houston Areas -->
  <section class="houston-areas">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Serving All of Greater Houston</h2>
        <p class="section-subtitle">
          From downtown Houston to the suburbs, we help businesses across the greater Houston area 
          dominate their local search results and attract more customers.
        </p>
      </div>
      
      <div class="areas-grid">
        {Object.entries(houstonAreas).map(([region, areas]) => (
          <div class="region-section">
            <h3 class="region-title">{region}</h3>
            <div class="region-areas">
              {areas.map(area => (
                <div class="area-item">{area}</div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="process">
    <div class="container">
      <h2 class="section-title">Our Process-Driven Approach</h2>
      <p class="section-subtitle">
        Transparency and measurable results are at the core of everything we do. 
        Here's how we help Houston businesses succeed online.
      </p>
      
      <div class="process-steps">
        <div class="step">
          <div class="step-number">1</div>
          <h3>Discovery & Audit</h3>
          <p>We dive deep into your current online presence, competitors, and target market in Houston to identify <span style='color: #F95738;'>opportunities</span>.</p>
        </div>
        <div class="step">
          <div class="step-number">2</div>
          <h3>Strategy Development</h3>
          <p>We create a <span style='color: #F95738;'>customized</span> digital marketing strategy that actually fits your business and Houston market conditions.</p>
        </div>
        <div class="step">
          <div class="step-number">3</div>
          <h3>Implementation</h3>
          <p>We execute the strategy and keep you in the loop every step of the way with <span style='color: #F95738;'>transparent</span> reporting on progress and results.</p>
        </div>
        <div class="step">
          <div class="step-number">4</div>
          <h3>Optimization & Growth</h3>
          <p>Continuously refine and improve your campaigns based on data and market changes to <span style='color: #F95738;'>maximize ROI</span>.</p>
        </div>
      </div>
    </div>
  </section>


  <!-- FAQ Section Component -->
  <FaqSection />
  
  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to <span style='color: #F95738;'>Grow</span> Your Houston Business?</h2>
        <p class="cta-subtitle">
          Get a free SEO audit and discover how we can help your business attract more customers 
          and <span style='color: #F95738;'>dominate</span> local search results in H-Town.
        </p>
        <div class="cta-buttons">
          <a href="/contact" class="btn-primary-hero">GET YOUR <span style="color: white; font-weight: 800;">FREE</span> SEO AUDIT</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    background: url('/hero-background.webp') center center / cover no-repeat;
    color: var(--text-primary);
    padding: 8rem 0 6rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(249, 251, 242, 0.85);
    z-index: 1;
  }

  .hero::after {
    content: '';
    position: absolute;
    width: 350px;
    height: 350px;
    background: linear-gradient(45deg, rgba(249, 87, 56, 0.08), transparent);
    bottom: -175px;
    left: -175px;
    border-radius: 50%;
    pointer-events: none;
    z-index: 2;
  }

  /* Additional geometric shapes */
  .geometric-shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .shape {
    position: absolute;
  }

  .triangle {
    width: 0;
    height: 0;
    border-style: solid;
  }

  .triangle-1 {
    border-left: 40px solid transparent;
    border-right: 40px solid transparent;
    border-bottom: 70px solid rgba(249, 87, 56, 0.06);
    top: 25%;
    left: 15%;
    transform: rotate(30deg);
  }

  .triangle-2 {
    border-left: 35px solid transparent;
    border-right: 35px solid transparent;
    border-bottom: 60px solid rgba(107, 114, 128, 0.04);
    top: 60%;
    right: 20%;
    transform: rotate(-45deg);
  }

  .hexagon {
    width: 100px;
    height: 57.74px;
    background: rgba(249, 87, 56, 0.05);
    position: relative;
    top: 40%;
    right: 10%;
  }

  .hexagon:before,
  .hexagon:after {
    content: "";
    position: absolute;
    width: 0;
    border-left: 50px solid transparent;
    border-right: 50px solid transparent;
  }

  .hexagon:before {
    bottom: 100%;
    border-bottom: 28.87px solid rgba(249, 87, 56, 0.05);
  }

  .hexagon:after {
    top: 100%;
    border-top: 28.87px solid rgba(249, 87, 56, 0.05);
  }

  .small-circle {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: rgba(107, 114, 128, 0.06);
    top: 70%;
    left: 25%;
  }

  
  .hero-title {
    font-size: 5.5rem;
    font-weight: 800;
    margin-bottom: 3rem;
    line-height: 1.1;
    color: var(--text-primary);
    text-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }
  
  .text-primary {
    color: var(--primary-orange);
  }
  
  .hero-subtitle {
    font-size: 1.1rem;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    color: var(--text-secondary);
    line-height: 1.6;
    text-align: center;
  }
  
  
  .hero-cta {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }
  
  .btn-primary-hero {
    background: linear-gradient(135deg, var(--button-orange), var(--accent-terracotta));
    color: white;
    padding: 1.25rem 2.5rem;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1rem;
    letter-spacing: 0.5px;
    display: inline-block;
    transition: var(--transition);
    border: none;
    cursor: pointer;
    box-shadow: var(--shadow-button);
    text-transform: uppercase;
    position: relative;
    z-index: 1;
  }
  
  .btn-primary-hero:hover {
    background: linear-gradient(135deg, var(--accent-coral), var(--button-orange));
    transform: translateY(-3px);
    box-shadow: var(--shadow-button-hover);
  }
  
  /* Services Section */
  .services {
    padding: 5rem 0;
    background: #FAFAFA;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3.5rem;
  }
  
  .section-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    text-align: center;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .section-subtitle {
    font-size: 1.375rem;
    color: var(--text-light);
    max-width: 650px;
    margin: 0 auto;
    line-height: 1.6;
    text-align: center;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    justify-items: stretch;
    width: 100%;
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .section-title {
      font-size: 2.5rem;
      max-width: 95%;
      padding: 0 1rem;
    }
    
    .section-subtitle {
      font-size: 1.25rem;
      max-width: 95%;
      padding: 0 1rem;
    }
    
    .hero-title {
      max-width: 95%;
      padding: 0 1rem;
    }
    
    .hero-subtitle {
      max-width: 95%;
      padding: 0 1rem;
    }
  }

  @media (max-width: 480px) {
    .services-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .section-title {
      font-size: 2rem;
      max-width: 100%;
      padding: 0 1rem;
    }
    
    .section-subtitle {
      font-size: 1.125rem;
      max-width: 100%;
      padding: 0 1rem;
    }
    
    .hero-title {
      font-size: 2.5rem;
      max-width: 100%;
      padding: 0 1rem;
    }
    
    .hero-subtitle {
      max-width: 100%;
      padding: 0 1rem;
    }
    
    .step p,
    .competitive-item p,
    .faq-item p,
    .cta-subtitle {
      max-width: 100%;
      padding: 0 0.5rem;
    }
    
    .services, .houston-areas, .process, .competitive-section {
      padding: 4rem 0;
    }
    
    .region-section {
      flex: 1 1 100%;
      min-width: auto;
    }
    
    .areas-grid {
      gap: 1.5rem;
    }
    
    /* Reset margins for mobile */
    .areas-grid > .region-section:nth-of-type(4),
    .areas-grid > .region-section:nth-of-type(5) {
      margin: 0;
    }
    
    .region-section {
      flex: 0 0 calc(50% - 1rem);
      min-width: 250px;
    }
    
    .areas-grid {
      gap: 2rem;
    }
    
    /* Reset margins for tablet */
    .areas-grid > .region-section:nth-of-type(4),
    .areas-grid > .region-section:nth-of-type(5) {
      margin: 0;
    }
    
    .region-section {
      padding: 2.5rem 2rem;
    }
    
    .region-title {
      font-size: 1.75rem;
      margin-bottom: 1.5rem;
    }
  }
  
  .services-cta {
    text-align: center;
    margin-top: 2rem;
  }
  
  .services-cta .btn-primary-hero {
    background: linear-gradient(135deg, var(--button-orange), var(--accent-terracotta));
    color: white;
    padding: 1.25rem 2.5rem;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1rem;
    letter-spacing: 0.5px;
    display: inline-block;
    transition: var(--transition);
    border: none;
    cursor: pointer;
    box-shadow: var(--shadow-button);
    text-transform: uppercase;
    position: relative;
    z-index: 1;
  }
  
  .services-cta .btn-primary-hero:hover {
    background: linear-gradient(135deg, var(--accent-coral), var(--button-orange));
    transform: translateY(-3px);
    box-shadow: var(--shadow-button-hover);
  }
  
  /* Houston Areas */
  .houston-areas {
    padding: 6rem 0;
    background: #F9FBF2;
    position: relative;
  }
  
  .areas-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2.5rem;
    margin-top: 4rem;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .region-section {
    background: rgba(255, 255, 255, 0.9);
    padding: 3rem 2.5rem;
    transition: all 0.4s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    text-align: left;
    border-radius: 16px;
    border: 1px solid rgba(249, 87, 56, 0.1);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    position: relative;
    flex: 0 0 calc(33.333% - 1.67rem);
    min-width: 280px;
  }
  
  /* Bottom row cards will naturally center as a pair under justify-content: center */
  
  .region-section:hover {
    background: linear-gradient(135deg, rgba(249, 87, 56, 0.08), rgba(255, 255, 255, 0.95));
    transform: translateY(-12px);
    box-shadow: 0 20px 40px rgba(249, 87, 56, 0.15);
    border: 1px solid rgba(249, 87, 56, 0.25);
  }
  
  .region-title {
    color: var(--text-primary);
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 2rem 0;
    line-height: 1.2;
    display: block;
    position: relative;
  }
  
  .region-title::after {
    content: '';
    position: absolute;
    bottom: -0.75rem;
    left: 0;
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, #F95738, rgba(249, 87, 56, 0.3));
    border-radius: 2px;
  }
  
  .region-areas {
    list-style: none;
    margin: 0;
    text-align: left;
    padding-left: 0;
  }
  
  .area-item {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    padding: 0.5rem 0 0.5rem 1.5rem;
    position: relative;
    font-size: 1.125rem;
    line-height: 1.6;
    font-weight: 500;
    transition: color 0.3s ease;
