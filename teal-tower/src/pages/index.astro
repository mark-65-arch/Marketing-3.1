    box-shadow: var(--shadow-button);
    text-transform: uppercase;
    position: relative;
    z-index: 1;
  }
  
  .services-cta .btn-primary-hero:hover {
    background: linear-gradient(135deg, var(--accent-coral), var(--button-orange));
    transform: translateY(-3px);
    box-shadow: var(--shadow-button-hover);
  }
  
  /* Houston Areas */
  .houston-areas {
    padding: 6rem 0;
    background: #F9FBF2;
    position: relative;
  }
  
  .areas-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2.5rem;
    margin-top: 4rem;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .region-section {
    background: rgba(255, 255, 255, 0.9);
    padding: 3rem 2.5rem;
    transition: all 0.4s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    text-align: left;
    border-radius: 16px;
    border: 1px solid rgba(249, 87, 56, 0.1);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    position: relative;
    flex: 0 0 calc(33.333% - 1.67rem);
    min-width: 280px;
  }
  
  /* Bottom row cards will naturally center as a pair under justify-content: center */
  
  .region-section:hover {
    background: linear-gradient(135deg, rgba(249, 87, 56, 0.08), rgba(255, 255, 255, 0.95));
    transform: translateY(-12px);
