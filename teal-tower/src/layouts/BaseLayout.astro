---
export interface Props {
  title: string;
  description: string;
  keywords?: string;
}

const { title, description, keywords = "Houston digital marketing, SEO services Houston, website design Houston, business profile optimization" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- SEO Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="en_US" />
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  
  <!-- Local Business Schema Markup -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Marketing AI Houston",
      "description": "Digital marketing agency specializing in SEO, website design, and business profile optimization for Houston small businesses",
      "url": "https://marketingnowhouston.com",
      "telephone": "(713) 555-0123",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "1234 Main Street",
        "addressLocality": "Houston",
        "addressRegion": "TX",
        "postalCode": "77002",
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 29.7604,
        "longitude": -95.3698
      },
      "areaServed": [
        "Houston",
        "The Heights",
        "Montrose",
        "Downtown Houston",
        "Sugar Land",
        "Katy",
        "Cypress"
      ],
      "serviceType": [
        "SEO Services",
        "Website Design",
        "Business Profile Optimization",
        "AI Search Optimization"
      ]
    }
  </script>
  
  <!-- Preload Critical Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    /* CSS Reset and Base Styles */
    *, *::before, *::after {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    
    :root {
      /* Warm Pastel Color Palette */
      --primary-bg: #FEFCF3;
      --secondary-bg: #F8F6F1;
      --text-primary: #2D3748;
      --text-secondary: #4A5568;
      --text-light: #718096;
      --primary-orange: #F95738;
      --button-orange: #F95738;
      --secondary-peach: #FFAB91;
      --accent-coral: #F95738;
      --accent-terracotta: #F95738;
      --link-orange: #F95738;
      --white: #FFFFFF;
      --shadow: 0 4px 20px rgba(45, 55, 72, 0.1);
      --shadow-hover: 0 8px 30px rgba(45, 55, 72, 0.15);
      --shadow-button: 0 6px 24px rgba(249, 87, 56, 0.3);
      --shadow-button-hover: 0 10px 40px rgba(249, 87, 56, 0.4);
      --border-radius: 12px;
      --transition: all 0.3s ease;
    }
    
    html {
      font-family: 'Inter', system-ui, sans-serif;
      scroll-behavior: smooth;
    }
    
    body {
      line-height: 1.7;
      color: var(--text-primary);
      background-color: var(--primary-bg);
      font-weight: 400;
    }
    
    /* Navigation Styles */
    .nav-container {
      background: #F9FBF2;
      box-shadow: var(--shadow);
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      backdrop-filter: blur(10px);
    }
    
    .nav-wrapper {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 5rem;
    }
    
    .logo {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      text-decoration: none;
      transition: var(--transition);
    }
    
    .logo:hover {
      transform: scale(1.05);
    }
    
    .logo-svg {
      width: 40px;
      height: 40px;
      flex-shrink: 0;
    }
    
    .logo-text {
      display: flex;
      flex-direction: column;
      line-height: 1;
    }
    
    .logo-marketing {
      font-weight: 700;
      font-size: 1.1rem;
      color: var(--text-primary);
      letter-spacing: 0.5px;
    }
    
    .logo-ai-houston {
      font-weight: 700;
      font-size: 1.1rem;
      color: var(--primary-orange);
      letter-spacing: 0.5px;
    }
    
    .nav-menu {
      display: flex;
      list-style: none;
      gap: 2.5rem;
      align-items: center;
    }
    
    .nav-link {
      color: var(--text-secondary);
      text-decoration: none;
      font-weight: 500;
      transition: var(--transition);
      padding: 0.5rem 0;
      position: relative;
    }
    
    .nav-link:hover {
      color: var(--link-orange);
    }
    
    .nav-link::after {
      content: '';
      position: absolute;
      width: 0;
      height: 2px;
      bottom: 0;
      left: 0;
      background: var(--primary-orange);
      transition: var(--transition);
    }
    
    .nav-link:hover::after {
      width: 100%;
    }
    
    .nav-cta {
      background: linear-gradient(135deg, var(--button-orange), var(--accent-terracotta));
      color: white;
      padding: 1rem 2rem;
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 700;
      font-size: 0.95rem;
      letter-spacing: 0.5px;
      transition: var(--transition);
      box-shadow: var(--shadow-button);
    }
    
    .nav-cta:hover {
      background: linear-gradient(135deg, var(--accent-coral), var(--button-orange));
      transform: translateY(-2px);
      box-shadow: var(--shadow-button-hover);
    }
    
    /* Mobile Menu */
    .mobile-menu-toggle {
      display: none;
      background: none;
      border: none;
      font-size: 1.8rem;
      color: var(--text-secondary);
      cursor: pointer;
      transition: var(--transition);
      padding: 0.5rem;
      border-radius: 6px;
    }
    
    .mobile-menu-toggle:hover {
      color: var(--primary-orange);
      background: var(--secondary-bg);
    }
    
    .mobile-menu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--white);
      box-shadow: var(--shadow);
      padding: 2rem;
      border-radius: 0 0 var(--border-radius) var(--border-radius);
    }
    
    .mobile-menu.active {
      display: block;
      animation: slideDown 0.3s ease;
    }
    
    @keyframes slideDown {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .mobile-nav-menu {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .mobile-nav-link {
      color: var(--text-secondary);
      text-decoration: none;
      font-weight: 500;
      padding: 1rem;
      display: block;
      border-radius: var(--border-radius);
      transition: var(--transition);
    }
    
    .mobile-nav-link:hover {
      color: var(--link-orange);
      background: var(--secondary-bg);
    }
    
    .mobile-nav-cta {
      background: linear-gradient(135deg, var(--primary-orange), var(--accent-terracotta));
      color: white;
      padding: 1rem 1.5rem;
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 600;
      text-align: center;
      margin-top: 1rem;
      transition: var(--transition);
      box-shadow: var(--shadow);
    }
    
    .mobile-nav-cta:hover {
      background: linear-gradient(135deg, var(--accent-coral), var(--primary-orange));
      transform: translateY(-2px);
      box-shadow: var(--shadow-hover);
    }
    
    /* Main Content */
    .main-content {
      margin-top: 5rem;
    }
    
    /* Footer Styles */
    .footer {
      background: #F9FBF2;
      color: var(--text-primary);
      padding: 2rem 0 1rem;
      margin-top: 5rem;
      box-shadow: var(--shadow);
    }
    
    .footer-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      min-height: 60px;
    }
    
    .footer-left h3 {
      color: var(--primary-orange);
      margin: 0;
      font-weight: 700;
      font-size: 1.5rem;
    }
    
    .footer-center {
      display: flex;
      gap: 2rem;
      align-items: center;
    }
    
    .contact-item {
      color: var(--text-secondary);
      font-size: 0.9rem;
      white-space: nowrap;
      font-weight: 500;
    }
    
    .footer-right {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .footer-link {
      color: var(--text-secondary);
      text-decoration: none;
      transition: var(--transition);
      font-size: 0.9rem;
      font-weight: 500;
    }
    
    .footer-link:hover {
      color: var(--primary-orange);
    }
    
    .separator {
      color: var(--text-light);
      margin: 0 0.25rem;
    }
    
    .footer-bottom {
      border-top: 1px solid rgba(107, 114, 128, 0.2);
      margin-top: 1.5rem;
      padding-top: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
      padding-left: 2rem;
      padding-right: 2rem;
    }
    
    .footer-bottom p {
      margin: 0;
      color: var(--text-light);
      font-size: 0.85rem;
    }
    
    .footer-legal {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .nav-menu {
        display: none;
      }
      
      .mobile-menu-toggle {
        display: block;
      }
      
      .footer-content {
        flex-direction: column;
        gap: 1.5rem;
        text-align: center;
        padding: 0 1rem;
      }
      
      .footer-center {
        flex-direction: column;
        gap: 1rem;
      }
      
      .contact-item {
        font-size: 0.85rem;
      }
      
      .footer-left h3 {
        font-size: 1.25rem;
      }
      
      .footer-bottom {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
        padding-left: 1rem;
        padding-right: 1rem;
      }
    }
    
    /* Utility Classes */
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }
    
    .section-padding {
      padding: 5rem 0;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, var(--button-orange), var(--accent-terracotta));
      color: white;
      padding: 1rem 2rem;
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 600;
      display: inline-block;
      transition: var(--transition);
      border: none;
      cursor: pointer;
      box-shadow: var(--shadow-button);
      font-size: 1rem;
      line-height: 1.2;
    }
    
    .btn-primary:hover {
      background: linear-gradient(135deg, var(--accent-coral), var(--button-orange));
      transform: translateY(-3px);
      box-shadow: var(--shadow-button-hover);
    }
    
    .btn-secondary {
      background: transparent;
      color: var(--primary-orange);
      padding: 1rem 2rem;
      border: 2px solid var(--primary-orange);
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 600;
      display: inline-block;
      transition: var(--transition);
      font-size: 1rem;
      line-height: 1.2;
    }
    
    .btn-secondary:hover {
      background: var(--primary-orange);
      color: white;
      transform: translateY(-2px);
      box-shadow: var(--shadow);
    }
    
    .section-title {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 1.5rem;
      line-height: 1.2;
    }
    
    .section-subtitle {
      font-size: 1.25rem;
      color: var(--text-light);
      line-height: 1.6;
      max-width: 700px;
      margin: 0 auto 3rem;
    }
    
    .text-center {
      text-align: center;
    }
    
    .card {
      background: var(--white);
      border-radius: var(--border-radius);
      padding: 2rem;
      box-shadow: var(--shadow);
      transition: var(--transition);
    }
    
    .card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-hover);
    }
  </style>
</head>
<body>
  <nav class="nav-container">
    <div class="nav-wrapper">
      <a href="/" class="logo">
        <svg class="logo-svg" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
