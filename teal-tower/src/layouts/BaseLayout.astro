---
export interface Props {
  title: string;
  description: string;
  keywords?: string;
}

const { title, description, keywords = "Houston digital marketing, SEO services Houston, website design Houston, business profile optimization" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- SEO Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="en_US" />
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  
  <!-- Local Business Schema Markup -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Marketing Now Houston",
      "description": "Digital marketing agency specializing in SEO, website design, and business profile optimization for Houston small businesses",
      "url": "https://marketingnowhouston.com",
      "telephone": "(713) 555-0123",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "1234 Main Street",
        "addressLocality": "Houston",
        "addressRegion": "TX",
        "postalCode": "77002",
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 29.7604,
        "longitude": -95.3698
      },
      "areaServed": [
        "Houston",
        "The Heights",
        "Montrose",
        "Downtown Houston",
        "Sugar Land",
        "Katy",
        "Cypress"
      ],
      "serviceType": [
        "SEO Services",
        "Website Design",
        "Business Profile Optimization",
        "AI Search Optimization"
      ]
    }
  </script>
  
  <!-- Preload Critical Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    /* CSS Reset and Base Styles */
    *, *::before, *::after {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    
    :root {
      /* Warm Pastel Color Palette */
      --primary-bg: #FEFCF3;
      --secondary-bg: #F8F6F1;
      --text-primary: #2D3748;
      --text-secondary: #4A5568;
      --text-light: #718096;
      --primary-orange: #E85A00;
      --button-orange: #FF8A4C;
      --secondary-peach: #FFAB91;
      --accent-coral: #FF5722;
      --accent-terracotta: #E17055;
      --link-orange: #D84315;
      --white: #FFFFFF;
      --shadow: 0 4px 20px rgba(45, 55, 72, 0.1);
      --shadow-hover: 0 8px 30px rgba(45, 55, 72, 0.15);
      --shadow-button: 0 6px 24px rgba(232, 90, 0, 0.3);
      --shadow-button-hover: 0 10px 40px rgba(232, 90, 0, 0.4);
      --border-radius: 12px;
      --transition: all 0.3s ease;
    }
    
    html {
      font-family: 'Inter', system-ui, sans-serif;
      scroll-behavior: smooth;
    }
    
    body {
      line-height: 1.7;
      color: var(--text-primary);
      background-color: var(--primary-bg);
      font-weight: 400;
    }
    
    /* Navigation Styles */
    .nav-container {
      background: linear-gradient(135deg, #FEFCF3 0%, #F8F6F1 50%, #F5F2EA 100%);
      box-shadow: var(--shadow);
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      backdrop-filter: blur(10px);
    }
    
    .nav-wrapper {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 5rem;
    }
    
    .logo {
      font-weight: 700;
      font-size: 1.6rem;
      color: var(--primary-orange);
      text-decoration: none;
      transition: var(--transition);
    }
    
    .logo:hover {
      color: var(--accent-terracotta);
      transform: scale(1.05);
    }
    
    .nav-menu {
      display: flex;
      list-style: none;
      gap: 2.5rem;
      align-items: center;
    }
    
    .nav-link {
      color: var(--text-secondary);
      text-decoration: none;
      font-weight: 500;
      transition: var(--transition);
      padding: 0.5rem 0;
      position: relative;
    }
    
    .nav-link:hover {
      color: var(--link-orange);
    }
    
    .nav-link::after {
      content: '';
      position: absolute;
      width: 0;
      height: 2px;
      bottom: 0;
      left: 0;
      background: var(--primary-orange);
      transition: var(--transition);
    }
    
    .nav-link:hover::after {
      width: 100%;
    }
    
    .nav-cta {
      background: linear-gradient(135deg, var(--button-orange), var(--accent-terracotta));
      color: white;
      padding: 1rem 2rem;
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 700;
      font-size: 0.95rem;
      letter-spacing: 0.5px;
      transition: var(--transition);
      box-shadow: var(--shadow-button);
    }
    
    .nav-cta:hover {
      background: linear-gradient(135deg, var(--accent-coral), var(--button-orange));
      transform: translateY(-2px);
      box-shadow: var(--shadow-button-hover);
    }
    
    /* Mobile Menu */
    .mobile-menu-toggle {
      display: none;
      background: none;
      border: none;
      font-size: 1.8rem;
      color: var(--text-secondary);
      cursor: pointer;
      transition: var(--transition);
      padding: 0.5rem;
      border-radius: 6px;
    }
    
    .mobile-menu-toggle:hover {
      color: var(--primary-orange);
      background: var(--secondary-bg);
    }
    
    .mobile-menu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--white);
      box-shadow: var(--shadow);
      padding: 2rem;
      border-radius: 0 0 var(--border-radius) var(--border-radius);
    }
    
    .mobile-menu.active {
      display: block;
      animation: slideDown 0.3s ease;
    }
    
    @keyframes slideDown {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .mobile-nav-menu {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .mobile-nav-link {
      color: var(--text-secondary);
      text-decoration: none;
      font-weight: 500;
      padding: 1rem;
      display: block;
      border-radius: var(--border-radius);
      transition: var(--transition);
    }
    
    .mobile-nav-link:hover {
      color: var(--link-orange);
      background: var(--secondary-bg);
    }
    
    .mobile-nav-cta {
      background: linear-gradient(135deg, var(--primary-orange), var(--accent-terracotta));
      color: white;
      padding: 1rem 1.5rem;
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 600;
      text-align: center;
      margin-top: 1rem;
      transition: var(--transition);
      box-shadow: var(--shadow);
    }
    
    .mobile-nav-cta:hover {
      background: linear-gradient(135deg, var(--accent-coral), var(--primary-orange));
      transform: translateY(-2px);
      box-shadow: var(--shadow-hover);
    }
    
    /* Main Content */
    .main-content {
      margin-top: 5rem;
    }
    
    /* Footer Styles */
    .footer {
      background: var(--text-primary);
      color: var(--white);
      padding: 5rem 0 2rem;
      margin-top: 5rem;
    }
    
    .footer-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 3rem;
    }
    
    .footer-section h3 {
      color: var(--primary-orange);
      margin-bottom: 1.5rem;
      font-weight: 700;
      font-size: 1.25rem;
    }
    
    .footer-section p {
      color: rgba(255, 255, 255, 0.8);
      line-height: 1.6;
      margin-bottom: 1rem;
    }
    
    .footer-links {
      list-style: none;
    }
    
    .footer-links li {
      margin-bottom: 0.75rem;
    }
    
    .footer-links a {
      color: rgba(255, 255, 255, 0.7);
      text-decoration: none;
      transition: var(--transition);
      font-weight: 500;
    }
    
    .footer-links a:hover {
      color: var(--secondary-peach);
      transform: translateX(5px);
    }
    
    .footer-bottom {
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      margin-top: 3rem;
      padding-top: 2rem;
      text-align: center;
      color: rgba(255, 255, 255, 0.6);
      font-weight: 500;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .nav-menu {
        display: none;
      }
      
      .mobile-menu-toggle {
        display: block;
      }
      
      .footer-content {
        grid-template-columns: 1fr;
        text-align: center;
      }
    }
    
    /* Utility Classes */
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }
    
    .section-padding {
      padding: 5rem 0;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, var(--button-orange), var(--accent-terracotta));
      color: white;
      padding: 1rem 2rem;
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 600;
      display: inline-block;
      transition: var(--transition);
      border: none;
      cursor: pointer;
      box-shadow: var(--shadow-button);
      font-size: 1rem;
      line-height: 1.2;
    }
    
    .btn-primary:hover {
      background: linear-gradient(135deg, var(--accent-coral), var(--button-orange));
      transform: translateY(-3px);
      box-shadow: var(--shadow-button-hover);
    }
    
    .btn-secondary {
      background: transparent;
      color: var(--primary-orange);
      padding: 1rem 2rem;
      border: 2px solid var(--primary-orange);
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 600;
      display: inline-block;
      transition: var(--transition);
      font-size: 1rem;
      line-height: 1.2;
    }
    
    .btn-secondary:hover {
      background: var(--primary-orange);
      color: white;
      transform: translateY(-2px);
      box-shadow: var(--shadow);
    }
    
    .section-title {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 1.5rem;
      line-height: 1.2;
    }
    
    .section-subtitle {
      font-size: 1.25rem;
      color: var(--text-light);
      line-height: 1.6;
      max-width: 700px;
      margin: 0 auto 3rem;
    }
    
    .text-center {
      text-align: center;
    }
    
    .card {
      background: var(--white);
      border-radius: var(--border-radius);
      padding: 2rem;
      box-shadow: var(--shadow);
      transition: var(--transition);
    }
    
    .card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-hover);
    }
  </style>
</head>
<body>
  <nav class="nav-container">
    <div class="nav-wrapper">
      <a href="/" class="logo">Marketing Now Houston</a>
      
      <ul class="nav-menu">
        <li><a href="/" class="nav-link">Home</a></li>
        <li><a href="/services" class="nav-link">Services</a></li>
        <li><a href="#about" class="nav-link">About</a></li>
        <li><a href="/contact" class="nav-cta">CONTACT</a></li>
      </ul>
      
      <button class="mobile-menu-toggle" id="mobile-toggle">☰</button>
      
      <div class="mobile-menu" id="mobile-menu">
        <ul class="mobile-nav-menu">
          <li><a href="/" class="mobile-nav-link">Home</a></li>
          <li><a href="/services" class="mobile-nav-link">Services</a></li>
