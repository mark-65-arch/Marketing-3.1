entrypoint = "index.js"
modules = ["nodejs-20"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-25_05"

[deployment]
run = ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "5000"]
deploymentTarget = "autoscale"
ignorePorts = false
build = ["npm", "run", "build"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Astro Dev Server"

[[workflows.workflow]]
name = "Astro Dev Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd teal-tower && npm run dev -- --port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
